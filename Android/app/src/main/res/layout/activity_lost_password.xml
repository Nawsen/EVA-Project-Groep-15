<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hogent.group15.ui.LostPasswordActivity"
    android:orientation="vertical">

    <hogent.group15.ui.controls.EvaArtistampTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lost_password_title"
        android:textSize="@dimen/h1_font_size"/>
    <hogent.group15.ui.controls.EvaMuseo300TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lost_password_description"
       />

    <hogent.group15.ui.controls.EvaEditText
        android:id="@+id/lost_password_email"
        style="@style/evaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_control_margin"
        android:hint="@string/register_email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"/>

    <hogent.group15.ui.controls.EvaButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lost_password_button"
        style="@style/evaButtonGray"
        android:layout_gravity="end"
        android:id="@+id/lost_password_button"/>
</LinearLayout>
