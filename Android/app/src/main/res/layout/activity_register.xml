<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hogent.group15.ui.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <hogent.group15.ui.controls.EvaArtistampTextView
            android:id="@+id/personal_info_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_control_margin"
            android:text="@string/register_personal_info_label"
            android:textSize="@dimen/h1_font_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_info_header"
            android:orientation="vertical">

            <hogent.group15.ui.controls.EvaEditText
                android:id="@+id/register_firstName"
                style="@style/evaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personal_info_header"
                android:layout_marginTop="@dimen/default_control_margin"
                android:hint="@string/register_first_name"
                android:inputType="textPersonName" />

            <hogent.group15.ui.controls.EvaEditText
                android:id="@+id/register_lastName"
                style="@style/evaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_firstName"
                android:layout_marginTop="@dimen/default_control_margin"
                android:hint="@string/register_name"
                android:inputType="textPersonName" />


            <hogent.group15.ui.controls.EvaEditText
                android:id="@+id/register_email"
                style="@style/evaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_lastName"
                android:layout_marginTop="@dimen/default_control_margin"
                android:hint="@string/register_email"
                android:inputType="textEmailAddress" />

            <Spinner
                android:id="@+id/register_sex"
                style="@style/evaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_email"
                android:layout_marginTop="@dimen/default_control_margin" />

            <Spinner
                android:id="@+id/register_grade"
                style="@style/evaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_sex"
                android:layout_marginTop="@dimen/default_control_margin" />

            <hogent.group15.ui.controls.EvaEditText
                android:id="@+id/register_password"
                style="@style/evaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_grade"
                android:layout_marginTop="@dimen/default_control_margin"
                android:hint="@string/register_password_hint"
                android:inputType="textPassword" />

            <hogent.group15.ui.controls.EvaEditText
                android:id="@+id/register_password_repeat"
                style="@style/evaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_password"
                android:layout_marginTop="@dimen/default_control_margin"
                android:hint="@string/register_repeat_password_hint"
                android:inputType="textPassword" />

        </LinearLayout>

        <hogent.group15.ui.controls.EvaButton
            android:id="@+id/register_submit"
            style="@style/evaButtonGreen" android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_register_button"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>

