<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:id="@+id/content"
    android:paddingTop="32dp" android:gravity="center" android:weightSum="6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hogent.group15.ui.NextChallengeActivity" android:orientation="vertical">

    <hogent.group15.ui.controls.EvaMuseo500TextView
        android:layout_width="wrap_content" android:textSize="@dimen/text_title" android:textColor="@color/evaFocusAccent"
        android:layout_height="wrap_content" android:text="@string/choose_challenge"/>

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">

        <hogent.group15.ui.ChallengeView
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"
            android:layout_margin="@dimen/challenge_vertical_margin" android:id="@+id/first_challenge"
            android:gravity="bottom"/>
        <hogent.group15.ui.ChallengeView
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"
            android:layout_margin="@dimen/challenge_vertical_margin" android:id="@+id/second_challenge"
            android:gravity="center_vertical"/>
        <hogent.group15.ui.ChallengeView
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"
            android:layout_margin="@dimen/challenge_vertical_margin" android:id="@+id/third_challenge"
            android:gravity="top"/>
    </LinearLayout>
</LinearLayout>
