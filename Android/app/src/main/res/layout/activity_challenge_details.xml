<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hogent.group15.ui.ChallengeDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content" android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent" android:id="@+id/challenge_image"
            android:layout_height="wrap_content" android:adjustViewBounds="true" />

        <hogent.group15.ui.controls.EvaMuseo500TextView
            android:layout_width="wrap_content" android:textSize="@dimen/h2_font_size"
            android:layout_height="wrap_content" android:id="@+id/challenge_title"
            android:gravity="center" android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:shadowColor="@android:color/black" android:shadowRadius="5"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent" android:layout_weight="1"
        android:layout_height="wrap_content"  android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <hogent.group15.ui.controls.EvaMuseo300TextView
            android:layout_width="fill_parent" android:textSize="25sp"
            android:layout_height="wrap_content" android:id="@+id/challenge_long_description" />
    </ScrollView>

    <hogent.group15.ui.controls.EvaButton
        android:layout_width="wrap_content" android:text="@string/accept_challenge" android:textSize="@dimen/text_big"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
        android:onClick="onAcceptChallenge" style="@style/evaButtonGray" android:paddingBottom="16dp"/>
</LinearLayout>
